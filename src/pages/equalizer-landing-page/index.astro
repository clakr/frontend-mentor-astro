---
import { Image } from "@astrojs/image/components";
import Heading from "../../components/Heading.astro";
import Layout from "../../layout/Layout.astro";
import pattern2 from "/public/equalizer-landing-page/bg-pattern-2.svg";
import android from "/public/equalizer-landing-page/icon-android.svg";
import apple from "/public/equalizer-landing-page/icon-apple.svg";
import phone from "/public/equalizer-landing-page/illustration-app.png";
import logo from "/public/equalizer-landing-page/logo.svg";

const projectTitle = "Equalizer Landing Page";
---

<style>
  @import url("https://fonts.googleapis.com/css2?family=IBM+Plex+Sans:wght@400;700&display=swap");

  :root {
    --turquoiseBlue: #66e2dc;
    --coral: #fa7453;
    --rajah: #ffb964;
    --seashell: #fcfaf9;
    --blackRussian: #191826;

    --baseFont: "IBM Plex Sans", sans-serif;
    --baseColor: var(--blackRussian);

    font-family: var(--baseFont);
    color: var(--baseColor);
  }

  body {
    background-image: url(../equalizer-landing-page/bg-main-mobile.png);
    background-size: auto;
    background-repeat: no-repeat;
    background-position: top -25rem left 3rem;
    overflow-x: hidden;
  }
  @media screen(tablet) {
    body {
      background-image: url(../equalizer-landing-page/bg-main-tablet.png);
      background-position: top -20rem left -40rem;
    }
  }

  @media screen(desktop) {
    body {
      background-image: url(../equalizer-landing-page/bg-main-desktop.png);
      background-position: top -25rem left -30rem;
    }
  }
</style>

<Layout title={projectTitle}>
  <Heading title={projectTitle} />
  <header
    class="flex flex-col gap-y-[6.4rem] overflow-x-hidden py-[4rem] px-[2.4rem] tablet:relative tablet:gap-y-[9.5rem] tablet:py-[6.2rem] tablet:px-[3.9rem] tablet:after:absolute tablet:after:-right-[3.6rem] tablet:after:-top-[3.2rem] tablet:after:h-[40rem] tablet:after:w-[26.67rem] tablet:after:bg-[url(../equalizer-landing-page/bg-pattern-1.svg)] tablet:after:bg-contain tablet:after:bg-no-repeat desktop:gap-y-[12.7rem] desktop:px-[16.45rem] desktop:after:-top-[4rem] desktop:after:right-0 desktop:after:h-[46.8rem] desktop:after:w-[31.2rem]"
  >
    <Image loading={null} alt="" src={logo} width={146} />
    <div
      class="d flex flex-col gap-y-[2rem] tablet:max-w-[52rem] tablet:gap-y-[2.8rem] desktop:max-w-[90rem] desktop:gap-y-[4rem]"
    >
      <h2
        class="text-[4rem] font-bold leading-[4.8rem] -tracking-[.05rem] tablet:text-[6.4rem] tablet:leading-[6.4rem] tablet:-tracking-[.07rem] desktop:text-[8.8rem] desktop:leading-[8.8rem] desktop:-tracking-[.1rem]"
      >
        We make your music sound extraordinary.
      </h2>
      <p
        class="text-[1.6rem] leading-[2.6rem] tablet:text-[1.8rem] tablet:leading-[2.8rem] desktop:text-[2rem] desktop:leading-[3.4rem]"
      >
        A system audio equalizer specifically designed for Android and iOS.
        Freely tune the way your music sounds with a professional grade
        parametric EQ & volume mixer. Control bass, mids, treble, gain control,
        reverb, and more!
      </p>
    </div>
  </header>
  <main
    class="relative mt-[12.6rem] min-h-[60rem] rounded-[1.2rem] bg-blackRussian tablet:mx-[3.5rem] tablet:mt-[18.7rem] desktop:mx-[16.5rem] desktop:mt-[25.9rem]"
  >
    <Image
      class="absolute left-1/2 top-0 h-[42rem] w-[28rem] -translate-x-1/2 tablet:-top-[3.1rem] desktop:h-[46.8rem] desktop:w-[31.2rem] desktop:-translate-x-[75%]"
      loading={null}
      alt=""
      src={pattern2}
    />
    <Image
      class="absolute left-1/2 top-0 h-[43rem] w-[20.9rem] -translate-x-1/2 -translate-y-[9.8rem] tablet:left-[26%] tablet:h-[55.6rem] tablet:w-[27.02rem] tablet:-translate-y-[13.8rem] desktop:h-[64.2rem] desktop:w-[31.2rem] desktop:-translate-x-[65%] desktop:-translate-y-[21.3rem]"
      loading={null}
      alt=""
      src={phone}
    />
    <div
      class="absolute top-0 flex translate-y-[70%] flex-col gap-y-[1.2rem] rounded-[1.2rem] bg-coral py-[4.8rem] px-[3.8rem] text-seashell tablet:left-[32.5%] tablet:top-1/4 tablet:max-w-[39.9rem] tablet:translate-y-0 tablet:px-[4.8rem] desktop:left-1/2 desktop:top-[15%] desktop:max-w-[44.6rem] desktop:gap-y-[1.6rem] desktop:px-[5.65rem] desktop:pt-[5.8rem]"
    >
      <h3
        class="text-[3.2rem] font-bold leading-[4rem] desktop:text-[4rem] desktop:leading-[5.2rem]"
      >
        Premium EQ
      </h3>
      <p
        class="text-[1.8rem] leading-[2.8rem] desktop:mt-[.6rem] desktop:text-[2rem] desktop:leading-[3.4rem]"
      >
        Get expert-level control with a robust equalizer, volume mixer, and
        spatial audio. Take your listening experience to a whole new level and
        access all our incredible features!
      </p>
      <span
        class="mt-[2.4rem] flex items-center gap-x-[1.6rem] text-[6.5rem] font-bold leading-[5.2rem] desktop:mt-[2.3rem]"
        >$4 <span
          class="text-[2rem] font-normal leading-[3.2rem] -tracking-[.02rem]"
          >/ month</span
        ></span
      >
      <button
        type="button"
        class="mt-[2rem] flex items-center justify-center gap-x-[.8rem] rounded-[1.2rem] bg-blackRussian py-[1.5rem] text-[1.8rem] font-bold leading-[3.2rem] tracking-[.02rem] active:bg-turquoiseBlue desktop:mt-[3rem]"
      >
        <Image loading={null} alt="" src={apple} height={20} /> iOS Download
      </button>
      <button
        type="button"
        class="mt-[.4rem] flex items-center justify-center gap-x-[.8rem] rounded-[1.2rem] bg-seashell py-[1.5rem] text-[1.8rem] font-bold leading-[3.2rem] tracking-[.02rem] text-blackRussian active:bg-rajah"
      >
        <Image loading={null} alt="" src={android} height={20} /> Android Download
      </button>
    </div>
  </main>
  <footer
    class="desktop:px-[16.5rem ] mt-[31rem] grid select-none gap-y-[3.2rem] py-[8rem] px-[2.4rem] tablet:mt-[9.8rem] tablet:grid-cols-2 tablet:py-[8.5rem] tablet:px-[3.3rem] desktop:mt-[11.1rem] desktop:grid-cols-3 desktop:py-[9.1rem]"
  >
    <Image
      loading={null}
      alt=""
      src={logo}
      width={146}
      class="tablet:col-span-2 desktop:col-span-1"
    />
    <div class="text-[1.6rem] leading-[2.6rem]">
      <p>All rights reserved Â© Equalizer 2021</p>
      <p>
        Have any problems? Contact us via social media or email us at
        <b class="font-bold">equalizer@example.com</b>
      </p>
    </div>
    <div class="flex gap-x-[2rem] tablet:items-center tablet:justify-end">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="aspect-square w-[2rem] cursor-pointer active:fill-coral"
      >
        <path
          d="M18.896 0H1.104C.494 0 0 .494 0 1.104v17.793C0 19.506.494 20 1.104 20h9.58v-7.745H8.076V9.237h2.606V7.01c0-2.583 1.578-3.99 3.883-3.99 1.104 0 2.052.082 2.329.119v2.7h-1.598c-1.254 0-1.496.597-1.496 1.47v1.928h2.989l-.39 3.018h-2.6V20h5.098c.608 0 1.102-.494 1.102-1.104V1.104C20 .494 19.506 0 18.896 0Z"
        >
        </path>
      </svg>
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="aspect-square w-[2rem] cursor-pointer active:fill-coral"
      >
        <path
          d="M10 1.802c2.67 0 2.987.01 4.042.059 2.71.123 3.975 1.409 4.099 4.099.048 1.054.057 1.37.057 4.04 0 2.672-.01 2.988-.057 4.042-.124 2.687-1.387 3.975-4.1 4.099-1.054.048-1.37.058-4.041.058-2.67 0-2.987-.01-4.04-.058-2.718-.124-3.977-1.416-4.1-4.1-.048-1.054-.058-1.37-.058-4.041 0-2.67.01-2.986.058-4.04.124-2.69 1.387-3.977 4.1-4.1 1.054-.048 1.37-.058 4.04-.058ZM10 0C7.284 0 6.944.012 5.877.06 2.246.227.227 2.242.061 5.877.01 6.944 0 7.284 0 10s.012 3.057.06 4.123c.167 3.632 2.182 5.65 5.817 5.817 1.067.048 1.407.06 4.123.06s3.057-.012 4.123-.06c3.629-.167 5.652-2.182 5.816-5.817.05-1.066.061-1.407.061-4.123s-.012-3.056-.06-4.122C19.777 2.249 17.76.228 14.124.06 13.057.01 12.716 0 10 0Zm0 4.865a5.135 5.135 0 1 0 0 10.27 5.135 5.135 0 0 0 0-10.27Zm0 8.468a3.333 3.333 0 1 1 0-6.666 3.333 3.333 0 0 1 0 6.666Zm5.338-9.87a1.2 1.2 0 1 0 0 2.4 1.2 1.2 0 0 0 0-2.4Z"
        ></path>
      </svg>
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="aspect-square w-[2rem] cursor-pointer active:fill-coral"
      >
        <path
          d="M20 2.172a8.192 8.192 0 0 1-2.357.646 4.11 4.11 0 0 0 1.805-2.27 8.22 8.22 0 0 1-2.606.996A4.096 4.096 0 0 0 13.847.248c-2.65 0-4.596 2.472-3.998 5.037A11.648 11.648 0 0 1 1.392 1a4.109 4.109 0 0 0 1.27 5.478 4.086 4.086 0 0 1-1.858-.513c-.045 1.9 1.318 3.679 3.291 4.075a4.113 4.113 0 0 1-1.853.07 4.106 4.106 0 0 0 3.833 2.849A8.25 8.25 0 0 1 0 14.658a11.616 11.616 0 0 0 6.29 1.843c7.618 0 11.923-6.434 11.663-12.205A8.354 8.354 0 0 0 20 2.172Z"
        >
        </path>
      </svg>
    </div>
  </footer>
</Layout>

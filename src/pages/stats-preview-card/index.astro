---
import Author from "../../components/Author.astro";
import Heading from "../../components/Heading.astro";
import Layout from "../../layout/Layout.astro";

type Stat = {
  numeric: string;
  description: string;
};

const stats: Stat[] = [
  {
    numeric: "10k+",
    description: "companies",
  },
  {
    numeric: "314",
    description: "templates",
  },
  {
    numeric: "12M+",
    description: "queries",
  },
];

const projectTitle = "Stats Preview Card";
---

<style>
  @import url("https://fonts.googleapis.com/css2?family=Inter:wght@400;700&family=Lexend+Deca&display=swap");

  :root {
    /* Primary */
    --veryDarkBlue: hsl(233, 47%, 7%);
    --darkDesaturatedBlue: hsl(244, 38%, 16%);
    --softViolet: hsl(277, 64%, 61%);

    /* Secondary */
    --white: hsl(0, 0%, 100%);
    --slightlyTransparentWhiteMain: hsla(0, 0%, 100%, 0.75);
    --slightlyTransparentWhiteStat: hsla(0, 0%, 100%, 0.6);

    --baseFont: "Inter", sans-serif;

    background-color: var(--veryDarkBlue);
    color: var(--white);
  }

  main {
    min-height: 100vh;
    min-height: 100svh;

    display: grid;
    place-items: center;
    padding-inline: 2.4rem;
  }

  .card {
    background-color: var(--darkDesaturatedBlue);
    box-shadow: 0px 20px 20px -10px rgba(23, 25, 41, 0.203087);
    border-radius: 0.8rem;
    overflow: hidden;
    max-width: 32.7rem;
    max-height: 78rem;
  }

  .card__header {
    position: relative;
  }

  .card__header::after {
    content: "";
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    background-color: var(--softViolet);
    mix-blend-mode: multiply;
    opacity: 0.75;
  }

  .card__content {
    padding: 3.2rem 3.1rem;
    display: flex;
    flex-direction: column;
    gap: 1.6em;
  }

  .card__heading {
    font-weight: 700;
    font-size: 2.8rem;
    line-height: 3.2rem;
    text-align: center;
  }

  .card__heading > span {
    color: var(--softViolet);
  }

  .card__subheading {
    font-size: 1.5rem;
    line-height: 2.5rem;
    text-align: center;
  }

  .card__container {
    margin-top: 2.4rem;
    display: flex;
    flex-direction: column;
    gap: 2.4rem;
  }

  .card__stat {
    display: flex;
    flex-direction: column;
    gap: 0.2rem;
  }

  .card__numeric {
    font-weight: 700;
    font-size: 2.4rem;
    line-height: 2.9rem;
    text-align: center;
  }

  .card__description {
    font-family: "Lexend Deca", sans-serif;
    font-size: 1.2rem;
    line-height: 2.5rem;
    letter-spacing: 0.1rem;
    text-align: center;
    text-transform: uppercase;
  }

  @media screen and (min-width: 1440px) {
    .card {
      display: grid;
      grid-template-columns: repeat(2, minmax(0, 1fr));
      max-width: 108rem;
      max-height: 44.6rem;
    }

    .card__header {
      order: 1;
    }

    .card__content {
      padding: 7.1rem 7.1rem 5.9rem;
      gap: 2.5em;
    }

    .card__heading {
      font-size: 3.6rem;
      line-height: 4.4rem;
      text-align: start;
    }

    .card__subheading {
      text-align: start;
    }

    .card__container {
      margin-top: 4.7rem;
      flex-direction: row;
      gap: 6rem;
    }

    .card__numeric {
      text-align: start;
    }

    .card__description {
      text-align: start;
    }
  }
</style>

<Layout title={projectTitle} component>
  <main>
    <Heading title={projectTitle} />
    <div class="card">
      <picture class="card__header">
        <source
          srcset="./stats-preview-card/image-header-desktop.jpg"
          media="(min-width: 1440px)"
        />
        <img src="../stats-preview-card/image-header-mobile.jpg" alt="" />
      </picture>
      <div class="card__content">
        <h1 class="card__heading">
          Get <span>insights</span> that help your business grow.
        </h1>
        <p class="card__subheading">
          Discover the benefits of data analytics and make better decisions
          regarding revenue, customer experience, and overall efficiency.
        </p>
        <div class="card__container">
          {
            stats.map(({ numeric, description }) => (
              <div class="card__stat">
                <span class="card__numeric">{numeric}</span>
                <span class="card__description">{description}</span>
              </div>
            ))
          }
        </div>
      </div>
    </div>
  </main>
  <Author dark />
</Layout>

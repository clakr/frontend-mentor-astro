---
import { Image } from "@astrojs/image/components";
import Layout from "../../layout/Layout.astro";
import "./style.css";
import patternOne from "/public/workit-landing-page/bg-pattern-1.svg";
import patternTwo from "/public/workit-landing-page/bg-pattern-2.svg";
import patternThree from "/public/workit-landing-page/bg-pattern-3.svg";
import founder from "/public/workit-landing-page/image-founder.webp";
import hero from "/public/workit-landing-page/image-hero.webp";
import logoDark from "/public/workit-landing-page/logo-dark.svg";
import logoLight from "/public/workit-landing-page/logo-light.svg";

const projectTitle = "WorkIt Landing Page";

type Card = {
  heading: string;
  subheading: string;
};

const cards: Card[] = [
  {
    heading: "Actionable insights",
    subheading:
      "Optimize your products, improve customer satisfaction and stay ahead of the competition with our product data analytics.",
  },
  {
    heading: "Data-driven decisions",
    subheading:
      "Make data-driven decisions with our product data analytics. Our AI-generated reports help you unlock insights hidden in your product data.",
  },
  {
    heading: "Always affordable",
    subheading:
      "Always affordable pricing that scales with your business. Get top-quality product data analytics services without hidden costs or unexpected fees.",
  },
];
---

<Layout title={projectTitle}>
  <header class="header">
    <Image class="header__pattern_one" loading={null} alt="" src={patternOne} />
    <Image class="header__pattern_two" loading={null} alt="" src={patternTwo} />
    <nav class="nav">
      <Image loading={null} alt="" src={logoLight} width={96} height={25} />
      <button class="nav__cta">Apply for access</button>
    </nav>
    <div class="hero">
      <h1 class="hero__heading">
        Data <span class="hero__emphasize">tailored</span> to your needs.
      </h1>
      <button class="hero__cta">Learn more</button>
    </div>
    <Image class="hero__image" loading={null} alt="" src={hero} />
  </header>
  <main class="main">
    <div class="cards">
      {
        cards.map(({ heading, subheading }, index) => (
          <div class="card">
            <span class="card__number">{index + 1}</span>
            <div class="card__body">
              <h2 class="card__heading">{heading}</h2>
              <p class="card__subheading">{subheading}</p>
            </div>
          </div>
        ))
      }
    </div>
    <div class="founder">
      <Image class="founder__image" loading={null} alt="" src={founder} />

      <div class="info">
        <Image
          class="header__pattern_three"
          loading={null}
          alt=""
          src={patternThree}
        />

        <h3 class="info__heading">Be the first to test</h3>
        <p class="info__subheading">
          Hi, I'm Louis Graham, the founder of the company. Book a demo call
          with me to become a beta tester for our app and kickstart your
          company. Apply for access below and I&apos;ll be in touch to schedule
          a call.
        </p>
        <button class="info__cta" type="button">Apply for access</button>
      </div>
    </div>
  </main>
  <footer class="footer">
    <Image loading={null} alt="" src={logoDark} width={96} height={25} />
    <div class="icons">

---
import { Image } from "@astrojs/image/components";
import Author from "../../components/Author.astro";
import Heading from "../../components/Heading.astro";
import Layout from "../../layout/Layout.astro";
import cart from "/public/product-preview-card/icon-cart.svg";
import './style.scss'

const projectTitle = "Product Preview Card";
---

<Layout title={projectTitle} component>
  <main>
    <Heading title={projectTitle} />
    <div class="card">
      <picture>
        <source
          srcset="/product-preview-card/image-product-desktop.jpg"
          media="(min-width: 1440px)"
        />
        <img
          src="/product-preview-card/image-product-mobile.jpg"
          alt="Gabrielle Essence Eau De Parfum Image"
          class="card__image"
        />
      </picture>
      <div class="card__content">
        <h2 class="card__category">PERFUME</h2>
        <h1 class="card__heading">Gabrielle Essence Eau De Parfum</h1>
        <p class="card__subheading">
          A floral, solar and voluptuous interpretation composed by Olivier
          Polge, Perfumer-Creator for the House of CHANEL.
        </p>
        <div class="card__prices">
          <strong class="card__current_price">$149.99</strong>
          <span class="card__previous_price">$169.99</span>
        </div>
        <button class="card__button">
          <Image alt="" src={cart} width={16} height={16} loading={null} />
          Add to Cart
        </button>
      </div>
    </div>
  </main>
</Layout>

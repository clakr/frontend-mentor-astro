---
import { Image } from "@astrojs/image/components";
import Layout from "../../layout/Layout.astro";
import logoDark from "/public/skilled-elearning/logo-dark.svg";

const projectTitle = "Skilled eLearning";
---

<style>
  @import url("https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:ital,wght@0,700;0,800;1,500&display=swap");

  :root {
    --chetwodeBlue: #666ca3;
    --midnightExpress: #13183f;
    --manatee: #83869a;
    --frenchRose: #f74780;
    --carnationPink: #ffa7c3;
    --white: #ffffff;

    --baseFont: "Plus Jakarta Sans", sans-serif;

    font-family: var(--baseFont);
  }

  .nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1.6rem;
  }

  .nav__cta {
    font-weight: 700;
    font-size: 1.6rem;
    line-height: 2.8rem;
    color: var(--white);
    padding: 0.9rem 2.4rem 1.1rem;
    background-color: var(--midnightExpress);
    border-radius: 2.8rem;
  }
</style>

<Layout title={projectTitle}>
  <nav class="nav">
    <Image loading={null} alt="" src={logoDark} width={89} height={35} />
    <button class="nav__cta">Get Started</button>
  </nav>
  <main></main>
  <footer></footer>
</Layout>

---
import { Image } from "@astrojs/image/components";
import Footer from "../../components/Footer.astro";
import Heading from "../../components/Heading.astro";
import Layout from "../../layout/Layout.astro";
import "./style.scss";
import error from "/public/signup-form/icon-error.svg";

const projectTitle = "Intro Component w/ Signup Form";
---

<Layout title={projectTitle}>
  <main>
    <Heading title={projectTitle} />
    <div class="copywrite">
      <h2 class="copywrite__heading">Learn to code by watching others</h2>
      <p class="copywrite__subheading">
        See how experienced developers solve problems in real-time. Watching
        scripted tutorials is great, but understanding how developers think is
        invaluable.
      </p>
    </div>
    <div class="content">
      <div class="offer">
        <span class="offer__emphasize">Try it free 7 days</span> then $20/mo. thereafter
      </div>
      <form class="form" action="#">
        <div class="form__group">
          <input
            class="form__input"
            type="text"
            name="first_name"
            placeholder="First Name"
            autocomplete="name"
          />
          <Image class="form__invalid_icon" loading={null} alt="" src={error} />
          <span class="form__invalid_label">First Name cannot be empty</span>
        </div>
        <div class="form__group">
          <input
            class="form__input"
            type="text"
            name="last_name"
            placeholder="Last Name"
            autocomplete="family-name"
          />
          <Image class="form__invalid_icon" loading={null} alt="" src={error} />
          <span class="form__invalid_label">Last Name cannot be empty</span>
        </div>
        <div class="form__group">
          <input
            class="form__input"
            type="email"
            name="email"
            placeholder="Email Address"
            autocomplete="email"
          />
          <Image class="form__invalid_icon" loading={null} alt="" src={error} />
          <span class="form__invalid_label"
            >Looks like this is not an email</span
          >
        </div>
        <div class="form__group">
          <input
            class="form__input"
            type="password"
            name="password"
            placeholder="Password"
            autocomplete="current-password"
          />
          <Image class="form__invalid_icon" loading={null} alt="" src={error} />
          <span class="form__invalid_label">Password cannot be empty</span>
        </div>
        <div class="form__cta">
          <button class="form__button" type="submit"
            >Claim your free trial</button
          >
          <span class="form__notice">
            By clicking the button, you are agreeing to our
            <a class="form__link" href="#">Terms and Services</a>
          </span>
        </div>
      </form>
    </div>
  </main>
  <Footer font="var(--baseFont)" color="var(--blue)" />
</Layout>

<script>
  const inputs = document.querySelectorAll("input");

  inputs.forEach((input) => {
    input.addEventListener("focus", () => {
      inputs.forEach((input) => {
        input.setAttribute("required", "true");
      });
    });
  });
</script>
